@model List<Website_FCBarcelona.Models.Mannschaft>

@using Website_FCBarcelona.Models

@{
    ViewBag.Title = "Attack";
}


@if (Model != null && Model.Count >= 1)
{
    <table class="content-table">
        <thead>
            <tr>
                <td colspan="6">Spieler</td>
            </tr>
            <tr>
                <td>Foto</td>
                <td>Vorname</td>
                <td>Nachname</td>
                <td>Geburtsdatum </td>
                <td>Marktwert</td>
                <td>Position</td>
            </tr>
        </thead>
        <tbody>
            @foreach (Mannschaft p in Model)
            {
                <tr>
                    <td><img src="~/Content/Images/Messi.jpg" width="40" /></td>
                    <td>@p.Firstname</td>
                    <td>@p.Lastname</td>
                    <td>@p.Birthdate.ToLongDateString()</td>
                    <td>@p.Salary</td>
                    <td>@p.Position</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="6" style="font-weight: bold">Trainer:</td>
            </tr>
            <tr>
                <td><img src="~/Content/Images/Setien.jpg"  width="110"/></td>
                <td style="font-weight:bold">Quique Setién</td>
            </tr>
        </tfoot>
    </table>
}
else
{
    <p>Keine Person gefunden!</p>
}